{
	"name": "glas",
	"version": "0.0.1",
	"ascMain": "src/as/index.ts",
	"main": "dist/ts/glas.cjs.js",
	"module": "dist/ts/glas.esm.js",
	"browser": "dist/ts/glas.umd.js",
	"types": "src/ts/index.d.ts",
	"description": "GLAS is WebGL in WebAssembly with AssemblyScript",
	"homepage": "https://github.com/lume/glas#readme",
	"license": "MIT",
	"repository": {
		"type": "git",
		"url": "https://github.com/lume/glas"
	},
	"bugs": {
		"url": "https://github.com/lume/glas/issues",
		"email": "bugs@lume.io"
	},
	"dependencies": {
		"@assemblyscript/loader": "^0.18.8",
		"aswebglue": "lume/aswebglue#ec83f1ba4b8bec8bc27b123ee86555c4b45b8da9"
	},
	"devDependencies": {
		"@as-pect/cli": "6.0.0",
		"@rollup/plugin-commonjs": "^17.1.0",
		"@rollup/plugin-node-resolve": "^11.2.0",
		"@rollup/plugin-typescript": "^8.2.0",
		"@types/node": "^14.14.27",
		"assemblyscript": "0.18.8",
		"live-server": "^1.2.1",
		"make-dir-cli": "^2.0.0",
		"prettier": "^2.2.1",
		"rimraf": "^3.0.2",
		"rollup": "^2.39.0",
		"ts-node": "^9.1.1",
		"tslib": "^2.1.0",
		"typescript": "^4.1.5"
	},
	"scripts": {
		"/////////////////// TESTING /////////////////////////": "",
		"test": "asp",
		"test:verbose": "asp --verbose",
		"test:trace": "asp --verbose 2>&1 | grep \"\\[Fail\\]\" -A 5",
		"^// test:trace comment": "This shows only failed tests, along with a few stack traces lines if any",
		"/////////////////// BUILDS //////////////////////////": "",
		"build:as": "asc src/as/index.ts -b dist/as/glas-untouched.wasm -t dist/as/glas-untouched.wat -d dist/as/glas-untouched.d.ts --exportTable --noUnsafe --sourceMap --debug",
		"build:as:optimized": "asc src/as/index.ts -b dist/as/glas-optimized.wasm -t dist/as/glas-optimized.wat -d dist/as/glas-optimized.d.ts --exportTable --noUnsafe --sourceMap --noValidate -O3z --converge",
		"build:ts": "npm run build:rollup",
		"build:html": "cp -R src/index.html dist/",
		"build:infra": "tsc -p src/infra/tsconfig.json",
		"build:prep": "make-dir dist --mode=0744 && npm run prettier",
		"build:rollup": "npx rollup -c",
		"prebuild": "npm run clean && npm run build:prep",
		"build": "npm run build:as && npm run build:ts && npm run build:html && npm run build:infra",
		"build:optimized": "npm run build:as:optimized && npm run build:ts && npm run build:html && npm run build:infra",
		"prettier": "echo TODO prettier",
		"^// EXPERIMENTAL >>> prettier": "prettier --write \"./**/?*.*\"",
		"clean": "rimraf dist",
		"/////////////////// RUNTIME /////////////////////////": "",
		"server": "live-server --watch=dist --middleware=../../../dist/infra/live-server-middleware ./dist",
		"prestart": "npm run build",
		"start": "npm run server"
	}
}
