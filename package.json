{
	"name": "glas",
	"version": "0.0.1",
	"ascMain": "src/as/index.ts",
 	"main": "src/ts/index.ts",
  	"types": "src/ts/index.d.ts",
	"description": "WebGL in WebAssembly with AssemblyScript",
	"homepage": "https://github.com/lume/glas#readme",
	"license": "MIT",
	"repository": {
		"type": "git",
		"url": "https://github.com/lume/glas"
	},
	"bugs": {
		"url": "https://github.com/lume/glas/issues",
		"email": "bugs@lume.io"
	},
	"scripts": {
		"/////////////////// TESTING /////////////////////////": "",
		"test": "asp --config=.aspectrc.js",
		"test:verbose": "asp --config=.aspectrc.js --verbose",
		"test:trace": "asp --config=.aspectrc.js --verbose 2>&1 | grep \"\\[Fail\\]\" -A 5",
		"^ test:trace comment": "This shows only failed tests, along with a few stack traces lines if any",
		"/////////////////// BUILDS //////////////////////////": "",
		"build:as:untouched": "asc src/as/index.ts -b build/as/untouched.wasm -t build/as/untouched.wat --sourceMap --validate --debug",
		"build:as:optimized": "asc src/as/index.ts -b build/as/optimized.wasm -t build/as/optimized.wat --sourceMap --validate --optimize",
		"build:as": "npm run build:as:untouched && npm run build:as:optimized",
		"build:ts": "tsc -p src/ts/tsconfig.json",
		"build:html": "cp -R src/index.html build/",
		"build:infra": "tsc -p src/infra/tsconfig.json",
		"build:prep": "make-dir build --mode=0744 && npm run prettier",
		"prebuild": "npm run clean && npm run build:prep",
		"build": "npm run build:infra && npm run build:html && npm run build:ts && npm run build:as",
		"prettier": "echo TODO prettier",
		"^ // EXPERIMENTAL >>> prettier": "prettier --write \"./**/?*.*\"",
		"clean": "rimraf build",
		"/////////////////// EXECUTION ///////////////////////": "",
		"server": "live-server --watch=build --middleware=../../../build/infra/live-server-middleware ./build",
		"prestart": "npm run build",
		"start": "npm run server"
	},
	"devDependencies": {
		"@as-pect/cli": "6.0.0",
		"@types/node": "^14.14.27",
		"assemblyscript": "0.18.8",
		"live-server": "^1.2.1",
		"make-dir-cli": "^2.0.0",
		"prettier": "^2.2.1",
		"rimraf": "^3.0.2",
		"typescript": "^4.1.5"
	},
	"dependencies": {
		"@assemblyscript/loader": "^0.18.8",
		"aswebglue": "lume/aswebglue#ec83f1ba4b8bec8bc27b123ee86555c4b45b8da9"
	}
}
